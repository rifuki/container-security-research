{
  "name": "container-security-test-app",
  "version": "1.0.0",
  "description": "Node.js web application for testing Docker container namespace and cgroup isolation",
  "type": "module",
  "main": "app.js",
  "scripts": {
    "start": "node app.js",
    "start:modular": "node app-refactored.js",
    "dev": "node --watch app.js",
    "dev:modular": "node --watch app-refactored.js",
    "test": "node --test",
    "lint": "eslint .",
    "docker:build": "docker build -t node-test-app:v1.0 .",
    "docker:run:baseline": "docker run -d --name test-baseline -p 3000:3000 node-test-app:v1.0",
    "docker:run:hardened": "docker run -d --name test-hardened --cpus=2.0 --memory=2g --pids-limit=512 --security-opt=no-new-privileges:true --cap-drop=ALL --cap-add=NET_BIND_SERVICE --read-only --tmpfs /tmp:rw,noexec,nosuid,size=64m --user 1000:1000 -p 3001:3000 node-test-app:v1.0",
    "docker:stop": "docker stop test-baseline test-hardened || true",
    "docker:rm": "docker rm test-baseline test-hardened || true",
    "docker:clean": "npm run docker:stop && npm run docker:rm"
  },
  "keywords": [
    "docker",
    "container",
    "security",
    "namespace",
    "cgroup",
    "isolation",
    "hardening",
    "research"
  ],
  "author": "Rifuki",
  "license": "MIT",
  "dependencies": {
    "express": "^4.18.2"
  },
  "devDependencies": {
    "eslint": "^8.55.0"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/rifuki/container-security-hardening"
  }
}